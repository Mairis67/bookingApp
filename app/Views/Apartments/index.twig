<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="../../../style.css">
    <title>Booking App</title>
</head>
<body>
<a class="btn btn-primary" href="/users/home">Back to user Page</a>
<a class="btn btn-primary" href="/apartments/create" id="apartments">Create new apartment</a>

<h2>All Apartments</h2>

<ul>

    {% for apartment in apartments %}
    <div class="card text-center">
        <li>
            <b>Name:</b> {{ apartment.name }}
        </li>
        <li>
            <b>Description:</b> {{ apartment.description }}
        </li>
        <li>
            <b>Address:</b> {{ apartment.address }}
        </li>
        <li>
            <b>Available From:</b> {{ apartment.availableFrom }}
        </li>
        <li>
            <b>Available To:</b> {{ apartment.availableTo }}
        </li>
        <a class="btn btn-primary" href="/apartments/{{ apartment.id }}">{{ apartment.name }}</a>
        <br>
        <br><br>
    </div>
    <br><br>
    {% endfor %}

</ul>

</body>
</html>