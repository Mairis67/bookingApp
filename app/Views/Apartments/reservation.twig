<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="../../../style.css">
    <title>Booking App</title>
</head>
<body>
{% if username != '' %}
    <a class="btn btn-primary" href="/apartments/{{ apartment.id }}" id="apartments">Back</a>

    <h3>{{ apartment.name }}</h3>
    <p><b>Description:</b>{{ apartment.description }}</p>
    <p><b>Address:</b>{{ apartment.address }}</p>
    <br>

    <form action="/apartments/{{ apartment.id }}/confirm" method="post">
        <div>
            <label for="reserve_from">Reserve from:</label>
            <input type="date" id="reserve_from" name="reserve_from">
        </div>
        <br>
        <div>
            <label for="reserve_to">Reserve to:</label>
            <input type="date" id="reserve_to" name="reserve_to">
        </div>
        <br>
        <button class="btn btn-primary" type="submit" onclick="return confirm('Confirm reservation')">Reserve</button>
    </form>
    <br><br>
    <h5>Reservations:</h5>

{% if userid == reservation.userId %}
<div class="card text-center">
    <div>
        <b>Reserved from:</b> {{ reservation.reservationFrom }}
    </div>
    <div>
        <b>Reserved to:</b> {{ reservation.reservationTo }}
    </div>
    <div>
        <b>Reserved by:</b> {{ username }}
    </div>
</div>

{% endif %}

